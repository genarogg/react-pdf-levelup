{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "..",
    "sourceMap": true,
    "strict": false,
    "jsx": "react-jsx"
  },
  "include": [
    "./index.ts",
    "../frontend/src/**/*.ts",
    "../frontend/src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}