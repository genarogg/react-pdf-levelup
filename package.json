{
  "name": "monorepo",
  "version": "1.0.0",
  "private": false,
  "description": "Monorepo con Turborepo: Astro (docs), React.js (frontend)",
  "engines": {
    "node": "22"
  },
  "workspaces": [
    "frontend",
    "docs",
    "lib"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build  --filter=frontend --filter=docs",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "-----lib-----": "-----------------------------------------",
    "publicar": "cd lib && npm run publicar"
  },
  "dependencies": {
    "turbo": "^2.7.2"
  },
  "packageManager": "npm@10.9.4"
}
