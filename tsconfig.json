{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "./",
    "paths": {
      "@env": [
        "./env.ts"
      ],
      "@/*": [
        "./src/client/*"
      ],
      "@fn": [
        "./src/functions"
      ],
      "@email/*": [
        "email/*"
      ],
      "@controller/*": [
        "controllers/*"
      ],
      "@router": [
        "routers/index.ts"
      ],
      "@graphql/*": [
        "graphql/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@pdf/*": [
        "./src/pdf/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "*.ts",
    "**/**/*.ts",
    "**/**/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "csv/csvReader.js",
    "prisma/changeProvider.js",
    "src/pdf/HelloWorldTemplate.tsx",
    "src/pdf/HelloWorldTemplate.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".next"
  ]
}